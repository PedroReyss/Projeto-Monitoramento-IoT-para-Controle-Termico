@model List<FuncionarioViewModel>
@{
    ViewData["Title"] = "Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background-color: #e6f4f8;
        font-family: 'Roboto', sans-serif;
        color: #333;
    }

    .container-func {
        max-width: 1000px;
        margin: auto;
        background-color: #fff;
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .title-func {
        font-family: 'Audiowide', sans-serif;
        font-size: 36px;
        color: #3aa6c9;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-cobre {
        background-color: #3aa6c9;
        color: white;
        padding: 10px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        font-family: "Audiowide", sans-serif;
    }

        .btn-cobre:hover {
            background-color: #3292b2;
        }

    .btn-danger-sm {
        background-color: #dc3545;
        color: white;
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
        font-size: 14px;
    }

        .btn-danger-sm:hover {
            background-color: #c82333;
        }

    .table-custom {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

        .table-custom th,
        .table-custom td {
            border: 1px solid #dceef5;
            padding: 12px 15px;
            text-align: center;
        }

        .table-custom th {
            background-color: #3aa6c9;
            color: white;
            font-family: 'Audiowide', sans-serif;
        }

        .table-custom tr:hover {
            background-color: #f0fafd;
        }
</style>

<div class="container-func">
    <h2 class="title-func">Listagem de Funcionários</h2>

    <div class="text-end mb-3">
        <a class="btn-cobre" href="/Funcionario/create"><i class="fa fa-plus"></i> Novo Registro</a>
    </div>

    <table class="table-custom">
        <thead>
            <tr>
                <th>Ações</th>
                <th>Código</th>
                <th>Nome</th>
                <th>Idade</th>
                <th>Cargo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var funcionario in Model)
            {
                <tr>
                    <td>
                        <a class="btn-cobre btn-sm" href="/Funcionario/Edit?id=@funcionario.Id"><i class="fa fa-edit"></i> Editar</a>
                        <a class="btn-danger-sm" href="javascript:apagarFuncionario(@funcionario.Id)"><i class="fa fa-trash"></i> Apagar</a>
                    </td>
                    <td>@funcionario.Id</td>
                    <td>@funcionario.Nome</td>
                    <td>@funcionario.Idade</td>
                    <td>@funcionario.Cargo</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function apagarFuncionario(id) {
        if (confirm('Confirma a exclusão do registro?')) {
            location.href = 'Funcionario/Delete?id=' + id;
        }
    }
</script>
