@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        font-family: 'Roboto', sans-serif;
    }

    .login-title {
        font-family: 'Bungee Shade', cursive;
        color: #3aa6c9;
        font-size: 36px;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .form-control {
        border-radius: 6px;
        padding: 12px;
        border: 1px solid #d6e7ee;
        margin-bottom: 20px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
    }

    .btn-login {
        background-color: #3aa6c9;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        font-family: "Audiowide", sans-serif;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #3292b2;
    }

    .login-link {
        margin-left: 10px;
        font-weight: bold;
        color: #3aa6c9;
        text-decoration: none;
    }

    .login-link:hover {
        text-decoration: underline;
    }

    .text-danger {
        font-size: 14px;
        margin-top: 10px;
        display: block;
        text-align: center;
    }
</style>

<div class="login-container">
    <h2 class="login-title"><i class="fa-solid fa-right-to-bracket"></i> Entrar</h2>

    <form action="/Usuario/FazerLogin" method="post">
        <label for="usuario" class="control-label">Usuário</label>
        <input type="text" name="usuario" class="form-control" required placeholder="Nome de usuário" />

        <label for="senha" class="control-label">Senha</label>
        <input type="password" name="senha" class="form-control" required placeholder="Senha" />

        <input type="submit" value="Login" class="btn btn-login" />
        <a href="/Usuario/Cadastro" class="login-link">ou faça seu Cadastro</a>

        <span class="text-danger">@ViewBag.Erro</span>
    </form>
</div>
