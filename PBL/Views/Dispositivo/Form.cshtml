
@model DispositivoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Dispositivo</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" enctype="multipart/form-data">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <br />
            <label for="Id" class="control-label">ID</label>
            <input asp-for="Id" class="form-control" readonly/>
            <span asp-validation-for="Id" class="text-danger"></span>
            <br />
            <label for="Apelido" class="control-label">Apelido do Dispositivo</label>
            <input asp-for="Apelido" class="form-control" />
            <span asp-validation-for="Apelido" class="text-danger"></span>
            <br />
            <label for="DeviceId" class="control-label">ID no Fiware</label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="DeviceId" class="form-control" />
            } else
            {
                <input asp-for="DeviceId" class="form-control" readonly/>
            }
            <span asp-validation-for="DeviceId" class="text-danger"></span>
            <br />
            <label for="EntityName" class="control-label">Nome no Fiware</label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="EntityName" class="form-control" />
            } else
            {
                <input asp-for="EntityName" class="form-control" readonly/>
            }
            <span asp-validation-for="EntityName" class="text-danger"></span>
            <br />
            <input class="btn btn-primary" type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>
