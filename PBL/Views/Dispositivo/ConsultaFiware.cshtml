@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset id="areaFiltro" class="form-group">
    <legend>Consulta dos dispositivos no FIWARE</legend>
    <div class="row">
        <div class="col-lg-3" >
            Nome <br/>
            <input type="text" id="nome" class="form-control">
        </div>
        <div class="col-lg-2" >
            Faixa de temp. da última medição<br/>
            <input type="number" id="valorMenor" class="form-control">
        </div>
        <div class="col-lg-2">
            <input type="number" id="valorMaior" class="form-control">
        </div>
        <div class="col-lg-2" >
            Período da última medição<br/>
            <input type="date" id="dataInicial" class="form-control">
        </div>
        <div class="col-lg-2">
            <input type="date" id="dataFinal" class="form-control">
        </div>
        <div class="col-lg-1">
            <br />
            <input type="button" id="btnFiltro" class="btn btn-success" value="Aplicar" onclick="aplicarFiltroConsulta()" />
        </div>
    </div>
</fieldset>

<div id="resultadoConsulta" class="table-responsive">
</div>